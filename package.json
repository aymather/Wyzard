{
  "name": "wyzard",
  "version": "1.0.0",
  "description": "A simple desktop application for extracting text from PDF files using OCR",
  "main": "public/electron.js",
  "homepage": "./",
  "keywords": [
    "electron",
    "react",
    "ocr",
    "tesseract",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "dotenv": "^17.2.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-pack": "node scripts/build-with-version.js",
    "download-poppler": "bash scripts/download-poppler.sh",
    "bundle-poppler-deps": "bash scripts/bundle-poppler-deps.sh"
  },
  "build": {
    "appId": "com.wyzard.app",
    "productName": "Wyzard",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*",
      "resources/poppler/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/poppler",
        "to": "poppler",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": null,
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/mac/entitlements.mac.plist",
      "notarize": false,
      "timestamp": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
