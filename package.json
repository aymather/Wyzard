{
  "name": "wyzard",
  "version": "1.0.0",
  "description": "A simple desktop application for extracting text from PDF files using OCR",
  "main": "public/electron.js",
  "keywords": [
    "electron",
    "react",
    "ocr",
    "tesseract",
    "pdf"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-pack": "electron-builder",
    "preelectron-pack": "yarn build"
  },
  "build": {
    "appId": "com.wyzard.app",
    "productName": "Wyzard",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
